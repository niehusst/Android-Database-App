<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/thumbnail_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher_foreground"
        android:contentDescription="Thumbnail picture of developer"
        />

    <TextView
        android:id="@+id/name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail_photo"
        android:layout_toEndOf="@+id/thumbnail_photo"
        android:layout_toRightOf="@+id/thumbnail_photo"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:text="Name Here"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/thumbnail_photo"
        android:layout_toRightOf="@+id/thumbnail_photo"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_alignBottom="@+id/thumbnail_photo"
        android:text="Title here"
        android:textSize="15sp"/>


</RelativeLayout>